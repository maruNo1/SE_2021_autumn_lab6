<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86DD50"
    tools:context=".SampleActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#CB560D63"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="#E799B0"
                android:fontFamily="serif-monospace"
                android:text="Hello World!"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:drawableStart="@drawable/fab_ic_close"
                android:text="Go to About Interface" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:drawableStart="@drawable/ic_action_done"
                android:text="Go to Purchase Interface" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>